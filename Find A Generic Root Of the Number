#include < stdio.h >  
int main()  
{  
    int num,  rem, sum = 0;  
    printf("Enter a number\n");  
    scanf("%d", &num);    
    while(num > 0)  
    {  
        rem  = num % 10;  
        sum  = sum + rem;  
        temp = num / 10;
        if(num == 0) 
        {  
            if(sum > 9)  
            {  
                num = sum;  
                sum  = 0;  
            } 
        } 
    }
    printf("Generic Root of %d is %d\n", num, sum);  
    return 0;  
} 
